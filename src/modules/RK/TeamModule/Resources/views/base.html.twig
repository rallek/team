{# purpose of this template: general base layout #}
{% block header %}
    {{ pageAddAsset('javascript', asset('magnific-popup/jquery.magnific-popup.min.js')) }}
    {{ pageAddAsset('stylesheet', asset('magnific-popup/magnific-popup.css')) }}
    {{ pageAddAsset('javascript', zasset('@RKTeamModule:js/RKTeamModule.js')) }}
    {% if 'edit' in app.request.get('_route') or 'config' in app.request.get('_route') %}
        {{ polyfill(['forms', 'forms-ext']) }}
    {% endif %}
{% endblock %}

{% block appTitle %}
    {{ moduleHeader('user', '', '', false, true, false, true) }}
{% endblock %}

{% block titleArea %}
    <h2>{% block title %}{% endblock %}</h2>
{% endblock %}
{{ pageSetVar('title', block('pageTitle')|default(block('title'))) }}

{{ showflashes() }}

{% block content %}{% endblock %}

{% block footer %}
    <p class="text-center">
        Powered by <a href="http://modulestudio.de" title="Get the MOST out of Zikula!">ModuleStudio 0.7.3</a>
    </p>
{% endblock %}
